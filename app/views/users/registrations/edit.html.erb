<h2>プロフィール変更</h2><br>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email, 'メールアドレス' %>
    <%= f.email_field :email, autofocus: true %><br><br>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password, '変更パスワード' %>
    <%= f.password_field :password, autocomplete: "off", placeholder: "New Password" %><br><br>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, '変更パスワードの確認' %>
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "New Password Confirmation" %><br><br>
  </div>

  <div class="field">
    <%= f.label :current_password, '古いパスワード' %>
    <%= f.password_field :current_password, autocomplete: "off", placeholder: "Old Password" %><br><br>
  </div>

  <div class="actions">
    <%= f.submit "Update", class: 'btn btn-large btn-info lead' %>
  </div>
<% end %>

<br>
<br>
<h3>元に戻す</h3>

<p><%= button_to "Cancel my account", registration_path(resource_name), class: 'btn btn-large btn-danger lead', data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to 'ホーム', root_path %>
